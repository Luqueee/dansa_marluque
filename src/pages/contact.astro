---
// Import the necessary components
import MainLayout from '@/layouts/MainLayout.astro';
import ContactSection from '@components/sections/ContactSection.astro';
import { SITE } from '@data/constants';

const pageTitle: string = `Contact | ${SITE.title}`;

const baseClasses =
    'inline-flex w-full md:lg:w-[45%] items-center justify-center gap-x-2 rounded-lg px-4 py-3 text-sm font-bold text-neutral-700 focus-visible:ring outline-none transition duration-300';
const borderClasses = 'border border-transparent';
const bgColorClasses = 'bg-yellow-400 dark:focus:outline-none';
const bgColorWhats = 'bg-[#25cc64] dark:focus:outline-none text-white';
const hoverWhats = 'hover:bg-[#64e386]';

const hoverClasses = 'hover:bg-yellow-500';
const fontSizeClasses = '2xl:text-base';
const disabledClasses = 'disabled:pointer-events-none disabled:opacity-50';
const ringClasses = 'ring-zinc-500 dark:ring-zinc-200';
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
    title={pageTitle}
    structuredData={{
        '@context': 'https://schema.org',
        '@type': 'WebPage',
        '@id': 'https://dansamarluque.com/contact',
        url: 'https://dansamarluque.com/contact',
        name: 'Contacto | Dansa Mar Luque',
        description: ' ',
        isPartOf: {
            '@type': 'WebSite',
            url: 'https://dansamarluque.com',
            name: 'Dansa Mar Luque',
            description:
                'En Estudi de Dansa Mar Luque disponemos de un casal de verano con numerosas actividades para todas las edades.',
        },
        inLanguage: 'en-US',
    }}>
    <!-- <ContactSection />-->
    <h1
        class="mb-20 mt-20 text-balance text-5xl font-bold tracking-tight text-neutral-800 dark:text-neutral-200 md:text-4xl md:leading-tight">
        Contacto
    </h1>
    <!--<a
        href="tel:+34652524715"
        class={`g-recaptcha mt-20 mb-20 ${baseClasses} ${borderClasses} ${bgColorClasses} ${hoverClasses} ${fontSizeClasses} ${disabledClasses} ${ringClasses}`}
        >llamar</a
    > -->
    <div class="mb-4 mt-4 flex w-full flex-wrap justify-center gap-4">
        <a
            href="https://wa.me/34654350567"
            target="_blank"
            class={`g-recaptcha ${baseClasses} ${borderClasses} ${bgColorWhats} ${hoverWhats} ${fontSizeClasses} ${disabledClasses} ${ringClasses}`}
            >Whatsapp</a
        >
        <a
            href="mailto:contacte@dansamarluque.com"
            target="_blank"
            class={`g-recaptcha ${baseClasses} ${borderClasses} ${bgColorClasses} ${hoverClasses} ${fontSizeClasses} ${disabledClasses} ${ringClasses}`}
            >enviar un correo</a
        >
    </div>

    <div class="mb-40 mt-8 flex w-full justify-center">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2985.09307862109!2d2.0850342765728467!3d41.567230084819926!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12a494c0cb6c7ab7%3A0xd3749c5ef26ac8e4!2sEstudi%20De%20Dansa%20Mar%20Luque!5e0!3m2!1ses!2ses!4v1717084008829!5m2!1ses!2ses"
            width=" 800"
            height="450"
            style="border:0; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</MainLayout>
