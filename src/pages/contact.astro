---
// Import the necessary components
import MainLayout from '@/layouts/MainLayout.astro';
import ContactSection from '@components/sections/ContactSection.astro';
import { SITE } from '@data/constants';

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
    title={pageTitle}
    structuredData={{
        '@context': 'https://schema.org',
        '@type': 'WebPage',
        '@id': 'https://dansamarluque.com/contact',
        url: 'https://dansamarluque.com/contact',
        name: 'Contacto | Dansa Mar Luque',
        description: ' ',
        isPartOf: {
            '@type': 'WebSite',
            url: 'https://dansamarluque.com',
            name: 'Dansa Mar Luque',
            description:
                'En Estudi de Dansa Mar Luque disponemos de un casal de verano con numerosas actividades para todas las edades.',
        },
        inLanguage: 'en-US',
    }}>
    <ContactSection />
</MainLayout>
